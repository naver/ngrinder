<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.ngrinder</groupId>
	<artifactId>ngrinder-sh</artifactId>
	<name>ngrinder-sh</name>
	<version>3.4.2-SNAPSHOT</version>

	<packaging>jar</packaging>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>convert_cr_lf</id>
						<phase>generate-resources</phase>
						<configuration>
							<tasks>
								<mkdir dir="${project.basedir}/target/classes"/>
								<fixcrlf srcdir="${project.basedir}/src/main/shell"
										 destdir="${project.basedir}/target/classes" includes="**/*.sh"
										 eol="unix"/>
								<fixcrlf srcdir="${project.basedir}/src/main/shell"
										 destdir="${project.basedir}/target/classes" includes="**/*.bat"
										 eol="dos"/>
							</tasks>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
